{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Steam Shortcut Fixer",
  "version": "1.0.0",
  "identifier": "com.steam.shortcutfixer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Steam Shortcut Fixer",
        "width": 1100,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [ "default" ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}